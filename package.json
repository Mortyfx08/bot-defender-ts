{
    "name": "bot-protection-shopify-app",
    "version": "1.0.0",
    "description": "Bot protection app for Shopify stores",
    "main": "web/index.js",
    "scripts": {
        "start": "ts-node web/index.ts",
        "dev": "nodemon --watch web --exec ts-node web/index.ts",
        "build": "cd frontend && npm run build",
        "client": "cd frontend && npm start",
        "dev:full": "concurrently \"npm run dev\" \"npm run client\"",
        "build:server": "tsc -p web/tsconfig.json",
        "start:prod": "node dist/index.js"
    },
    "dependencies": {
        "@shopify/polaris": "^13.9.5",
        "@shopify/polaris-icons": "^9.3.1",
        "@shopify/shopify-api": "^11.12.0",
        "@shopify/shopify-app-express": "^5.0.17",
        "bcryptjs": "^2.4.3",
        "cors": "^2.8.5",
        "dotenv": "^16.5.0",
        "express": "^5.1.0",
        "express-rate-limit": "^6.7.0",
        "jsonwebtoken": "^9.0.0",
        "mongoose": "^7.0.3",
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/express": "^5.0.2",
        "@types/jsonwebtoken": "^9.0.9",
        "@types/mongoose": "^5.11.96",
        "@types/node": "^22.15.18",
        "@types/react": "^19.1.4",
        "@types/react-dom": "^19.1.5",
        "concurrently": "^8.0.1",
        "nodemon": "^2.0.22",
        "typescript": "^4.9.5"
    }
}
