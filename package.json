{
    "name": "bot-protection-shopify-app",
    "version": "1.0.0",
    "private": true,
    "description": "Bot protection app for Shopify stores",
    "main": "dist/backend/src/server.js",
    "scripts": {
        "start": "node dist/server/index.js",
        "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
        "dev:backend": "nodemon --watch server --exec ts-node server/index.ts",
        "dev:frontend": "cd web && npm start",
        "build": "tsc",
        "test": "jest",
        "test:bot-protection": "ts-node -P server/tests/tsconfig.json server/tests/botProtection.test.ts"
    },
    "dependencies": {
        "@apollo/client": "^3.13.8",
        "@apollo/server": "^4.12.2",
        "@prisma/client": "^6.9.0",
        "@shopify/app-bridge": "^3.7.9",
        "@shopify/app-bridge-react": "^3.7.9",
        "@shopify/app-bridge-utils": "^3.5.1",
        "@shopify/polaris": "^11.26.0",
        "@shopify/shopify-api": "^11.13.0",
        "@testing-library/jest-dom": "^5.17.0",
        "@testing-library/react": "^13.4.0",
        "@testing-library/user-event": "^13.5.0",
        "@types/jest": "^29.5.0",
        "@types/node-cron": "^3.0.11",
        "@types/react": "^18.2.45",
        "@types/react-dom": "^18.2.18",
        "@types/redis": "^4.0.10",
        "apollo-server-express": "^3.13.0",
        "axios": "^1.9.0",
        "bcryptjs": "^2.4.3",
        "cors": "^2.8.5",
        "countup.js": "^2.9.0",
        "dotenv": "^16.5.0",
        "express": "^4.18.2",
        "express-rate-limit": "^6.7.0",
        "express-session": "^1.17.3",
        "graphql": "^16.11.0",
        "graphql-tag": "^2.12.6",
        "jsonwebtoken": "^9.0.0",
        "mongodb": "^6.17.0",
        "mongoose": "^7.0.3",
        "node-cron": "^4.1.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-router-dom": "^6.21.1",
        "react-scripts": "5.0.1",
        "redis": "^5.5.6",
        "typescript": "^5.1.6",
        "web-vitals": "^2.1.4"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.2",
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.17",
        "@types/express-session": "^1.17.7",
        "@types/jsonwebtoken": "^9.0.1",
        "@types/mongoose": "^5.11.96",
        "@types/node": "^22.15.30",
        "concurrently": "^8.0.1",
        "jest": "^29.5.0",
        "nodemon": "^2.0.22",
        "prisma": "^6.9.0",
        "ts-jest": "^29.1.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.1.6"
    },
    "resolutions": {
        "babel-jest": "26.6.0",
        "typescript": "^5.1.6"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
